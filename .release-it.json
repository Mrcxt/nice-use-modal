{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "release: 🍀v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}
